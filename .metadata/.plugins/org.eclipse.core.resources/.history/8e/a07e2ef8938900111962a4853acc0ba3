import java.awt.geom.Point2D;
import java.awt.geom.Point2D.Double;


public class Tower {

	int id;
	Object element;
	Point2D location;
	String name;
	boolean available;
	int speed;
	int cost;
	int level;
	
	
	public Object getElement() {
		// TODO Auto-generated method stub
		return element;
	}

	public Point2D getLocation() {
		// TODO Auto-generated method stub
		return location;
	}

	public int getID() {
		// TODO Auto-generated method stub
		return id;
	}

	public String getName() {
		// TODO Auto-generated method stub
		return name;
	}

	public boolean isAvailable() {
		// TODO Auto-generated method stub
		return available;
	}

	public int getSpeed() {
		// TODO Auto-generated method stub
		return speed;
	}

	public int getCost() {
		// TODO Auto-generated method stub
		return cost;
	}

	public int getLevel() {
		// TODO Auto-generated method stub
		return level;
	}

	public void upgrade() {
		// TODO Auto-generated method stub
		this.level++;
		
	}

	public static Tower createTower(Frame.element el, Double loc) {
		// TODO Auto-generated method stub

		return new Tower(el, loc);
//		return new Tower(){
//			
//		};
	}
	
	public Tower(Frame.element el, Double loc){

		id = 0;
		element = el;
		location = loc;
		name = "Test";
		available = false;
		speed = 0;
		cost = 0;
		level = 1;
		
	}
	

}
